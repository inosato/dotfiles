"
" ~/.pentadactylrc
"

loadplugins '\.(js|penta)$'
group user

" Options {{{
" -----------------------------------------------------------------------------

set defsearch=g
set guioptions-=br
set guioptions+=n
set hlfind

"}}}
" Status line {{{
" -----------------------------------------------------------------------------

hi -a StatusLine font-weight: normal;
hi -a StatusLineNormal color:#E8E8D3 !important; background:#1c1c1c !important;

"}}}
" Font {{{
" -----------------------------------------------------------------------------

hi FontCode -a font-family: Terminus important; font-size: 9pt !important;
hi FontFixed -a font-family: Terminus !important; font-size: 9pt !important;
hi Normal -a font-family: Terminus !important; font-size: 9pt !important;

"}}}
" Mappings {{{
" -----------------------------------------------------------------------------

map , <Leader>
nmap -builtin <Leader>p :private winopen<CR>
nmap -builtin <Leader>, :noh<CR>
nmap -builtin ; :
nmap -builtin : ;
vmap -builtin ; :
vmap -builtin : ;
nmap -builtin <C-S-n> :tabmove! +1<CR>
nmap -builtin <C-S-p> :tabmove! -1<CR>

" Noscript plugin
nmap -builtin ss :set script!<CR>
nmap -builtin sa :set noscript-sites!=<A-Tab>
nmap -builtin st :set noscript-tempsites!=<A-Tab>
nmap -builtin su :set noscript-untrusted!=<A-Tab>



"}}}
" Toggle Styles {{{
" -----------------------------------------------------------------------------

map -builtin <F3> :styletoggle<Space>-name<Space>hybrid<CR>

"}}}
" Style: Hybrid Colourscheme {{{
" -----------------------------------------------------------------------------

style -name hybrid http://*,https://*,file://*,about:blank <<EOM
  * {
    color: #E8E8D3 !important;
    background: #151515 !important;
    border-color: #1c1c1c !important;
  }
  a, a * {
    color: #81A2BE !important;
    text-decoration: none !important;
  }
  a:hover, a:hover * {
    color: #fad07a !important;
  }
  a:visited, a:visited * {
    color: #b294bb !important;
  }
  a:visited:hover, a:visited:hover * {
    color: #FFB964 !important;
  }
EOM
styledisable -name=hybrid

"}}}
" Style: Minimalistic Tabs {{{
" -----------------------------------------------------------------------------

style -name minitabs chrome://* <<EOM
#TabsToolbar toolbarbutton {
    display: none !important;
}

#TabsToolbar .tabbrowser-tabs {
    background: #1c1c1c !important;
    min-height: 18px !important;
    padding-bottom: 2px;
}

#TabsToolbar .tabbrowser-tab {
    background: #1c1c1c !important;
    border: none !important;
    color: #505050 !important;
    font: 9pt Terminus !important;
    margin: 0 !important;
}

#TabsToolbar .tabbrowser-tab[selected] {
    background: #1c1c1c !important;
    color: #fad07a !important;
}

#TabsToolbar .tabbrowser-tab:not([pinned]) {
    max-width: 125px !important;
    min-width: 125px !important;
}

#TabsToolbar .tabbrowser-tab:not([fadein]) {
    max-width: 1px !important;
    min-width: 1px !important;
}

#TabsToolbar .tabbrowser-tab:hover:not([selected]) {
    background: #fad07a !important;
    color: #1c1c1c !important;

}

#TabsToolbar .tab-background {
    background: transparent !important;
    margin: 0 !important;
}

#TabsToolbar .tab-background-start,
#TabsToolbar .tab-background-end {
    display: none !important;
}

#TabsToolbar .tab-background-middle {
    background: transparent !important;
    margin: -4px -2px !important;
}

#TabsToolbar .tabbrowser-tab:after,
#TabsToolbar .tabbrowser-tab:before {
    display: none !important;
}
EOM

"}}}
