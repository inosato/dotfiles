{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jquery": true,
    "node": true
  },
  "globals": {
    "google": true
  },
  "rules": {
    "camelcase": [2, {"properties": "always"}],
    "indent": [2, 4],
    "quotes": [2, "single", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "strict": [2, "global"]
  }
}
