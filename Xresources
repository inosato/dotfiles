!
! ~/.Xresources
!

!! set dpi
Xft.dpi: 96

!! cursor theme
Xcursor.theme: Vanilla-DMZ-AA

!! urxvt options
URxvt.scrollstyle: rxvt
URxvt.scrollBar: off

URxvt.font: xft:M+ 1m for Powerline:size=13
URxvt.boldFont: xft:M+ 1m for Powerline:size=13
URxvt.italicFont: xft:M+ 1m for Powerline:size=13
URxvt.boldItalicFont: xft:M+ 1m for Powerline:size=13
URxvt.urgentOnBell: True
URxvt.visualBell: True
! perl extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select
!clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.copyCommand:  xsel -ib
URxvt.pasteCommand: xsel -ob
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlButton: 1
URxvt.urlLauncher: /usr/bin/firefox
URxvt.underlineURLs: true
! fix letter space for xft fonts
URxvt.letterSpace: -1

!TomorrowNight
#define t_background #1d1f21
#define t_current_line #282a2e
#define t_selection #373b41
#define t_foreground #c5c8c6
#define t_comment #969896
#define t_red #cc6666
#define t_orange #de935f
#define t_yellow #f0c674
#define t_green #b5bd68
#define t_aqua #8abeb7
#define t_blue #81a2be
#define t_purple #b294bb

! colours for bold, underline, italic
URxvt.colorIT: t_green
URxvt.colorBD: t_foreground
URxvt.colorUL: t_blue

! terminal colours
*background: t_background
*foreground: t_comment
! black
*color0: t_current_line
*color8: t_selection
! red
*color1: t_red
*color9: #FF3334
! green
*color2: t_green
*color10: #9ec400
! yellow
*color3: t_yellow
*color11: t_orange
! blue
