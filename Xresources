!! set dpi
Xft.dpi: 96

!! cursor theme
Xcursor.theme: Vanilla-DMZ-AA

!! urxvt options
URxvt.scrollstyle: rxvt
URxvt.scrollBar: off
URxvt.font: xft:Cousine Regen:size=15
URxvt.boldFont: xft:Cousine Regen:size=15
URxvt.italicFont: xft:Cousine Regen:size=15
URxvt.boldItalicFont: xft:Cousine Regen:size=15
URxvt.urgentOnBell: True
URxvt.visualBell: True
! perl extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select
!clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.copyCommand:  xsel -ib
URxvt.pasteCommand: xsel -ob
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlButton: 1
URxvt.urlLauncher: /usr/bin/firefox
URxvt.underlineURLs: true
! colours for bold, underline, italic
URxvt.colorIT: #99ad6a
URxvt.colorBD: #e8e8d3
URxvt.colorUL: #8197bf


