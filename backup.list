# 
# ~/.backup.list
#

# Include
+ /dev/console
+ /dev/initctl
+ /dev/null
+ /dev/zero

# Exclude
- /dev/*
- /proc/*
- /sys/*
- /tmp/*
- lost+found/*

- /var/lib/pacman/sync/*

- /mnt/cdrom/*
- /mnt/data0/*
- /mnt/data1/*
- /mnt/usb/*

- /home/w0ng/data0/*
- /home/w0ng/data1/*
- /home/w0ng/downloads/*
- /home/w0ng/dropbox/*
- /home/w0ng/music/*
- /home/w0ng/pictures/*
- /home/w0ng/videos/*
- /home/w0ng/.db-container/*

# location of backup folder
- /mnt/data0/backup/*
